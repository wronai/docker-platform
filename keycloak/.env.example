# Keycloak Configuration

# Database Configuration
KEYCLOAK_DATABASE_HOST=keycloak-db
KEYCLOAK_DATABASE_PORT=5432
KEYCLOAK_DATABASE_NAME=keycloak
KEYCLOAK_DATABASE_USER=keycloak
KEYCLOAK_DATABASE_PASSWORD=keycloak_password
KEYCLOAK_DATABASE_SCHEMA=public

# Admin User
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Server Configuration
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080
KC_HOSTNAME=localhost
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_PROXY=edge

# Features
KC_FEATURES=account,admin,authorization,client-policies,impersonation,recovery-codes,scripts,token-exchange,web-authn

# Cache Configuration
KC_CACHE=local
KC_CACHE_STACK=local

# Health and Metrics
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=false

# Development Settings
KC_DEVELOPMENT=true

# JVM Settings
JAVA_OPTS=-Xms512m -Xmx1024m -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m -Djava.net.preferIPv4Stack=true
